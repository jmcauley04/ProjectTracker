@inject TaskService TaskService
@using System.ComponentModel
<div class="mt-4">
    @if (_tasks is null)
    {
        <h5>Loading...</h5>
    }
    else
    {
        <div class="d-grid gap-4">
            <div>
                <ProjectTracker.Components.TaskBoardParts.TaskTable Title="All Tasks" Tasks="@_tasks" />
            </div>
        </div>
    }
</div>

@code {

    List<TaskEntry>? _tasks;

    protected override async Task OnInitializedAsync()
    {
        _tasks = await TaskService.GetAll();
    }
}
